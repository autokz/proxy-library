{
  "description": "Proxy server for Auth with JWT",
  "name": "autokz/oauth_proxy",
  "minimum-stability": "stable",
  "license": "proprietary",
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "require": {
    "php": ">=7.4.0",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.2",
    "vlucas/phpdotenv": "^5.2",
    "webmozart/assert": "^1.9"
  },
  "require-dev": {
    "overtrue/phplint": "^2.3",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "autoload": {
    "psr-4": {
      "Proxy\\OAuth\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests/"
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=phpcs.xml",
    "phpcbf": "phpcbf",
    "lint": "phplint",
    "test": "phpunit --colors=always"
  },
  "authors": [
    {
      "name": "Farid",
      "email": "farid-n@auto.kz",
      "homepage": "https://github.com/faridjan"
    },
    {
      "name": "Roman Tyan",
      "email": "roman-t@auto.kz",
      "homepage": "https://github.com/tyanrv"
    }
  ]
}
